{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="row justify-content-center " style="margin-top:5cm;">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-dark text-white justify-content-center d-flex ">Register</div>
                <div class="card-body">
                    {{ form_start(registrationForm, {'attr': {'class': 'form'}}) }}
                        <div class="form-group">
                            {{ form_label(registrationForm.username, 'Username', {'label_attr': {'class': 'control-label'}}) }}
                            {{ form_widget(registrationForm.username, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'control-label'}}) }}
                            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group form-check">
                            {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                            {{ form_label(registrationForm.agreeTerms, 'Agree to terms', {'label_attr': {'class': 'form-check-label'}}) }}
                        </div>
                        <button type="submit" class="btn btn-dark">Register</button>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
